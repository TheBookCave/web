@model web.Models.InputModels.BookInputModel
    <br/>
    <br/>
    <br/>
    <br/>
<h1>Add a new book</h1>

 <form method="POST">
    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name">
    <span asp-validation-for="Name" class="text-danger"></span>
    <br/>

    <label asp-for="Description">Book Description</label>
    <br/>
    <textarea asp-for="Description" placeholder="Book description..."></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
    <br/>


    <label>Author</label>
    <select asp-for="AuthorId">
        @foreach (var author in Model.AllAuthors)
        {
            <option name="AuthorId" value=@author.Id >@author.Name</option>
        }
    </select>

    <a asp-controller="Book" asp-action="CreateAuthor" >New Author</a>
    <br/>


    <label>Publisher</label>
    <select asp-for="PublisherId">
    @foreach (var publisher in Model.AllPublishers)
        {
            <option name="PublisherId" value=@publisher.Id>@publisher.Name</option>
        }
    </select>

    <a asp-controller="Book" asp-action="CreatePublisher" >New Publisher</a>
    <br/>

    <label asp-for="ImageUrl">ImageUrl</label>
    <input type="url" asp-for="ImageUrl">
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    <br/>
    <label asp-for="Year">Year</label>
    <input type="number" asp-for="Year">
    <span asp-validation-for="Year" class="text-danger"></span>
    <br/>
    <label asp-for="ISBN">ISBN</label>
    <input type="text" asp-for="ISBN">
    <span asp-validation-for="ISBN" class="text-danger"></span>
    <br/>
    <label asp-for="Language">Language</label>
    <input type="text" asp-for="Language" value="English">
    <span asp-validation-for="Language" class="text-danger"></span>
    <br/>
    <label asp-for="Quantity">Quantity</label>
    <input type="number" asp-for="Quantity">
    <span asp-validation-for="Quantity" class="text-danger"></span>
    <br/>
    <label asp-for="Price">Price</label>
    <input type="number" asp-for="Price">
    <span asp-validation-for="Price" class="text-danger"></span>
    <br/>
    <label asp-for="Discount">Discount</label>
    <input type="number" asp-for="Discount">
    <span asp-validation-for="Discount" class="text-danger"></span>
    <br/>
    <label asp-for="Genres">Genre</label>
    @foreach (var genre in Model.AllGenres)
    {
        <div class="checkbox">
            <label>
                <input name="Genres" type="checkbox"
                        value="@genre.Id" />@genre.Name
            </label>
            </div>
    }    
    <a asp-controller="Book" asp-action="CreateGenre" >New Genre</a>
    <br/>

    <input type="submit" value="Submit Book" class="btn btn-info">
</form> 