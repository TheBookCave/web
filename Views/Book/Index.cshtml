@model List<web.Models.ViewModels.BookListViewModel>
<div>
    <h2>List of books</h2>
    <h4><a asp-controller="Book" asp-action="Index" asp-route-orderby="name-asc">Order by Name Ascending</a></h4>
    <h4><a asp-controller="Book" asp-action="Index" asp-route-orderby="name-desc">Order by Name Descending</a></h4>
    <h4><a asp-controller="Book" asp-action="Index" asp-route-orderby="id">Order by ID</a></h4>
    <h4><a asp-controller="Book" asp-action="Index" asp-route-orderby="price-asc">Order by Price Ascending</a></h4>
    <h4><a asp-controller="Book" asp-action="Index" asp-route-orderby="price-desc">Order by Price Descending</a></h4>
</div>
<div>
    @foreach(var book in @Model)
    {
        <p>Book Name: <a asp-controller="Book" asp-action="Details" asp-route-Id="@book.Id">@book.Name</a></p>
        <p>Author ID: @book.AuthorId</p>
        <p>Image ID: @book.ImageUrl</p>
        <p>Price: @book.Price</p>
        <p>Discount: @book.Discount</p>
    }
</div>