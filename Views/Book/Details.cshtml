@model web.Models.ViewModels.BookDetailViewModel 

<h1>Book Detail</h1>
<div class="row">
    <div class="col-md-4"><img class="bookImage"src="@Model.ImageUrl"/></div>
    <div class="row col-md-8">
        <h3 class="col-md-12">@Model.Name</h3>
        <!-- Description is available through @Model.Description -->
        <div class="col-md-6">Price: @Model.Price</div>
        <div class="col-md-6">Rating: @Model.Rating</div>
        <div class="col-md-12">Discount: @Model.Discount</div>
        <div class="col-md-12">Language: @Model.Language</div>
        <div class="col-md-12">Author name: @Model.AuthorName</div>
        <div class="col-md-12">Publisher name: @Model.PublisherName</div>
        <div class="col-md-6">Year published: @Model.Year</div>
        <div class="col-md-6">ISBN: @Model.ISBN</div>
    </div>
    <div class="row col-xl-4 col-lg-5">
        <button class="btn col-md-12"><i class="fas fa-cart-plus"></i> Add to cart</button>
        <button class="btn col-md-5" onclick="location.href='@Url.Action("RateBook", "Book", new { BId = @Model.Id, BookName = @Model.Name})'"><i class="far fa-star"></i> Review</button>
        <button class="btn col-md-6 offset-md-1"><i class="far fa-heart"></i> Add to wishlist</button>
    </div>
</div>


<div>
    <h3>Reviews: </h3>
    @foreach(var comment in @Model.Comments)
    {
        <div>
            <div class="card mb-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title text-warning">
                        @if(@comment.RatingValue <= 0.5) {
                            <i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                        }
                        else if(@comment.RatingValue <= 1.5) {
                            <i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                        }
                        else if(@comment.RatingValue <= 2.5) {
                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                        }
                        else if(@comment.RatingValue <= 3.5) {
                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                        }
                        else if(@comment.RatingValue <= 4.5) {
                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i>
                        }
                        else if(@comment.RatingValue <= 5) {
                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                        }
                        @comment.RatingValue
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">@comment.RatingDate</h6>
                    @if(@comment.Comment != null)
                    {
                        <p class="card-text">@comment.Comment</p>
                    }
                </div>
            </div>
            
        </div>
    }
</div>