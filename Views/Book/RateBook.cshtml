@model web.Models.InputModels.RatingInputModel

<h1>BookId: @Model.BookId </h1>

<form method="POST" asp-controller="Book" asp-action="RateBook">
    <label asp-for="RatingValue">RatingValue</label>
    <input type="number" asp-for="RatingValue">
    <span asp-validation-for="RatingValue" class="text-danger"></span>
    <br/>
    <label asp-for="Comment">Comment</label>
    <br/>
    <textarea name="Comment" placeholder="Enter comment here..."></textarea>
    <span asp-validation-for="Comment" class="text-danger"></span>
    <br/>

    @{
        <input type="hidden" asp-for="BookId" value="@Model.BookId">
    }

    <input type="submit" value="Submit Comment" class="btn btn-info">
</form> 