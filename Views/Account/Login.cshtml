@model web.Models.ViewModels.LoginViewModel

<h1>Login</h1>
<form asp-action="Login" asp-controller="Account" class="form-horizontal">
    <div class="form-group">
        <input type="email" asp-for="Email" class="form-controll" placeholder="Enter email"/>
    </div>
    <div class="form-group">
        <input type="password" asp-for="Password" class="form-controll" placeholder="Enter password"/>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" asp-for="Remember"/> Remember me
        </label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Register</button>
    </div>
</form>