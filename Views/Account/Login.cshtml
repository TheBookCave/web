@model web.Models.InputModels.LoginInputModel

@{
  ViewData["Title"] = "Login";
}

<div class="row">
  <form asp-action="Login" asp-controller="Account" class="form-horizontal col-lg-6 offset-lg-3">
    <h1>Login</h1>
    <div class="form-group">
      <input type="email" asp-for="Email" class="form-control" placeholder="Enter email"/>
    </div>
    <div class="form-group">
      <input type="password" asp-for="Password" class="form-control" placeholder="Enter password"/>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox" asp-for="Remember"/> Remember me
      </label>
    </div>
    <div class="form-group col-md-6 offset-md-3">
      <button type="submit" class="btn btn-primary col-12">Login</button>
    </div>
  </form>
</div>