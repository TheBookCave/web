@model web.Models.ViewModels.LoginViewModel

@{
  ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div class="row">
  <div class="col-lg-3"></div>
  <form asp-action="Login" asp-controller="Account" class="form-horizontal col-lg-6">
    <div class="form-group">
      <input type="email" asp-for="Email" class="form-control" placeholder="Enter email"/>
    </div>
    <div class="form-group">
      <input type="password" asp-for="Password" class="form-control" placeholder="Enter password"/>
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox" asp-for="Remember"/> Remember me
      </label>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Login</button>
    </div>
  </form>
  <div class="col-lg-3"></div>
</div>